<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
     <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
   
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.body}}
    </p>
  </div>
  <div>
    <h3>Comments</h3>
  {{#each post.comments}}
    <div class="comment">
      <p>{{this.body}}</p>
      <p>By {{this.user.name}} on {{format_date this.date_created}}</p>
    </div>
  {{/each}}
  </div>
  {{> comments}}
 </div>